  body
    script.
      function search(event) {
        if (event.keyCode === 13) {//listen to 'enter' key
          const phrase = document.getElementById('search').value;
          if(phrase.length > 0){
            console.info('phrase: '+phrase);
            window.location.href = '/search?q='+phrase;
          }else{
            window.location.href = '/';
          }
          
        }
      }
    .shadow-sm.pb-3.mb-2
      header.p-2.d-flex.flex-row
        h1.text-dark.d-inline.brand Recipes 21
        input(name='search', id="search" type='text', 
        placeholder='Find a recipe', onkeyup="search(event)", 
        value=searchText).form-control.form-control-sm.search-box.d-inline.ml-2
        .d-inline.mt-2.mr-3
          button.btn.btn-link Sign In
          | 
          button.btn.btn-outline-success Get Started
      div.sub-header.mt-2  
        nav.nav.justify-content-center
          a.nav-item.ml-3(href='/') 
            span.text-dark Home
          a.nav-item.ml-3(href='/') 
            span.text-dark About
          a.nav-item.ml-3(href='/') 
            span.text-dark Recipes
          a.nav-item.ml-3(href='/') 
            span.text-dark Subscribe
          a.nav-item.ml-3(href='/') 
            span.text-dark Facebook

      
  
    div.container
      
      .content
        .row.no-gutters.mx-1
          .col-md-9
            block content
            //recipes spotlight
            if !isHomePage
              .mt-2
                .card
                  h3.card-header Recipes spotlight
                  .card-body
                    .row
                      each recipe in recipesSpotlight
                        .col-3
                          .card.border-0
                            .card-body
                              a(href=`${recipe.url}`)
                                h6= recipe.title
                              - var img = recipe.thumbnail200
                              a(href=`${recipe.url}`)
                                img.img-fluid(src=img, alt='recipe image')
          .col-md-3
            .card.position-fixed.border-0
              .card-body
                // Ad fixed right  
    //footer
    footer.bg-info.text-white.py-4
      .container
        .row
          each recipe in footerRecipes  
            .col-2.mt-2
              a(href=`${recipe.url}`)
                span.text-white= recipe.title
